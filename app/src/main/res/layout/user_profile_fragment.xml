<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user_profile_students.UserProfileFragment">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/faculty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo_image"
        app:layout_constraintLeft_toLeftOf="@id/logo_image"
        app:layout_constraintRight_toRightOf="@id/logo_image"
        android:text="@string/faculty_name"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/string_color"
        android:fontFamily="@font/sfpro"/>

    <TextView
        android:id="@+id/student_study_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/faculty_name"
        app:layout_constraintRight_toRightOf="@id/faculty_name"
        app:layout_constraintLeft_toLeftOf="@id/faculty_name"
        android:text="@string/student_study_card_string"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sfpro"
        android:gravity="center"/>

    <TextView
        android:id="@+id/student_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/form_of_training"
        app:layout_constraintTop_toTopOf="@id/form_of_training"
        app:layout_constraintBottom_toBottomOf="@id/form_of_training"
        android:text="Шифр студента"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/student_code_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/student_code"
        app:layout_constraintLeft_toLeftOf="@id/student_code"
        app:layout_constraintRight_toRightOf="@id/student_code"
        android:text="18\35090"
        android:textSize="14sp"
        android:textColor="@color/string_color"/>


    <TextView
        android:id="@+id/form_of_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintRight_toLeftOf="@id/payment_form"
        app:layout_constraintLeft_toRightOf="@id/student_code"
        app:layout_constraintTop_toBottomOf="@id/student_study_card"
        android:text="Форма обучение"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/form_of_training_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/form_of_training"
        app:layout_constraintRight_toRightOf="@id/form_of_training"
        app:layout_constraintLeft_toLeftOf="@id/form_of_training"
        android:textColor="#FF0000"
        android:text="очная бакалавр"/>

    <TextView
        android:id="@+id/payment_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/form_of_training"
        app:layout_constraintTop_toTopOf="@id/form_of_training"
        app:layout_constraintBottom_toBottomOf="@id/form_of_training"
        android:text="Форма оплаты "
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/payment_form_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payment_form"
        app:layout_constraintLeft_toLeftOf="@id/payment_form"
        app:layout_constraintRight_toRightOf="@id/payment_form"
        android:text="Бюджет"
        android:textSize="14sp"
        android:textColor="#077719"/>
</androidx.constraintlayout.widget.ConstraintLayout>